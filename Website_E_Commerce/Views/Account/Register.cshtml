
@{
    ViewBag.Title = "Register";
}

<style>
    .form-check-input {
        border-radius: 0;
    }

        .form-check-input:checked {
            background-color: #212529;
            border-color: #212529;
        }

    .form-check-label {
        font-size: 0.9rem;
    }

    .btn-submit {
        background-color: #000000;
        color: #ffffff;
        border-radius: 0;
        padding: 12px;
        font-weight: bold;
        letter-spacing: 1px;
        width: 100%;
    }

        .btn-submit:hover {
            background-color: #333333;
            color: #ffffff;
        }

        .btn-submit:hover {
            background-color: white;
            color: black;
            border: 1px solid black;
        }
</style>

<div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="form-container">
            <h2 class="text-center mb-5">Create an Account</h2>
            <form>
                <div class="row mb-3">
                    <div class="col-md-5 p-0">
                        <input type="text" class="form-control" id="firstName" placeholder="First Name">
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-5 p-0">
                        <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                    </div>
                </div>

                <div class="row mb-3">
                        <input type="email" class="form-control col-11" id="email" placeholder="Email">
                </div>

                <div class="row mb-3">
                        <input type="password" class="form-control col-11" id="password" placeholder="Password">
                </div>

                <div class="mb-4 form-check">
                    <input type="checkbox" class="form-check-input" id="subscribeCheck" checked>
                    <label class="form-check-label" for="subscribeCheck">
                        Subscribe to stay updated with new products and offers!
                    </label>
                </div>

                <button type="submit" class="btn-submit btn btn-submit">SUBMIT</button>
            </form>
        </div>
    </div>
</div>

